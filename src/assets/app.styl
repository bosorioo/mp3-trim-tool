body
  font-family Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu,
    Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
body > #app
  display flex
  flex-direction column
  margin 0
  overflow hidden
  width 100vw
  height 100vh

button
  cursor pointer
  padding 6px 12px
  border-radius 4px
  outline none
  border solid 1px #ddd
  color #555
  user-select none
  background #efefef
  *
    pointer-events none
    cursor pointer

  &:hover
    color #222
    border solid 1px #bbb

  &.white
    color white
    &:hover
      color #ccc

  &.disable
  &.disabled
  &[disable]
  &[disabled]
    color #999
    pointer-events none

  &.flat
    border unset
    background transparent

  &.round
    border-radius 100%

  &.icon
    padding 4px

  &.mini-icon
    padding 0
