body
  font-family Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu,
    Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
body > #app
  display flex
  flex-direction column
  margin 0
  overflow hidden
  width 100vw
  height 100vh

button
  cursor pointer
  padding 6px 12px
  border-radius 4px
  outline none
  border solid 1px #ddd
  color #555
  user-select none
  background #efefef
  *
    pointer-events none
    cursor pointer

  &:hover
    color #222
    border solid 1px #bbb

  &.white
    color white
    &:hover
      color #eee

  &.disable
  &.disabled
  &[disable]
  &[disabled]
    color #999
    pointer-events none

  &.flat
    border unset
    background transparent

  &.outline
    background transparent

  &.round
    border-radius 100%

  &.icon
    padding 4px

  &.mini-icon
    padding 0

.loading
  position relative
  &::after
    content ''
    animation loading-animation 0.6s both alternate infinite ease-in-out
    position absolute
    background white
    width 8px
    height 8px
    border-radius 50px
    bottom 0

@keyframes loading-animation {
  0% {
    left calc(25% - 4px)
    width 8px
  }
  100% {
    left calc(75% - 4px)
    width 8px
  }
}
